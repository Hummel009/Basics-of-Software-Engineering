package main.java.hummel;

import java.time.Month;
import java.util.*;

public class Lab1_06 {
	public static Scanner input = new Scanner(System.in);
	public static HashMap<Integer, Integer> daysSinceNY = new HashMap<>();
	public static HashMap<Integer, Integer> daysInMonths = new HashMap<>();


	static {
		daysSinceNY.put(1, 0);
		daysSinceNY.put(2, 31);
		daysSinceNY.put(3, 59);
		daysSinceNY.put(4, 90);
		daysSinceNY.put(5, 120);
		daysSinceNY.put(6, 151);
		daysSinceNY.put(7, 181);
		daysSinceNY.put(8, 212);
		daysSinceNY.put(9, 243);
		daysSinceNY.put(10, 273);
		daysSinceNY.put(11, 304);
		daysSinceNY.put(12, 334);

		daysInMonths.put(1, 31);
		daysInMonths.put(2, 28);
		daysInMonths.put(3, 31);
		daysInMonths.put(4, 30);
		daysInMonths.put(5, 31);
		daysInMonths.put(6, 30);
		daysInMonths.put(7, 31);
		daysInMonths.put(8, 31);
		daysInMonths.put(9, 30);
		daysInMonths.put(10, 31);
		daysInMonths.put(11, 30);
		daysInMonths.put(12, 31);
	}

	public static void main(String[] args) {
		System.out.println("Enter the date in three steps like 2002 07 10");
		int year;
		do {
			year = input.nextInt();
		} while (year < 1);

		Months month;
		do {
			int temp = input.nextInt();
		} while (month > Months.DEC.abbr || month < 1);

		int date = input.nextInt();
		System.out.println(date + "." + month + "." + year);
		int days = date + daysSinceNY.get(month) + (year - 1) * 365;
	}

	public enum Months {
		JAN(1), FEB(2), MAR(3), APR(4), MAY(5), JUN(6), JUL(7), AUG(8), SEP(9), OCT(10), NOV(11), DEC(12);

		public int abbr;
		Months(int i) {
			abbr = i;
		}
	}
}